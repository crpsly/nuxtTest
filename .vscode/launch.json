{
  // 配置版本，固定為 0.2.0
  "version": "0.2.0",
  // 調試配置列表
  "configurations": [
    {
      // 配置名稱，會顯示在調試面板中
      "type": "chrome",
      // 請求類型，這裡是啟動調試
      "request": "launch",
      "name": "client: chrome",
      "url": "http://localhost:3000",
      "webRoot": "${workspaceFolder}"
    },
    {
      // 調試類型，這裡是 Node.js
      "type": "node",
      "request": "launch",
      "name": "server: nuxt",
      "outputCapture": "std",
      // 請求類型，這裡是啟動調試
      "program": "${workspaceFolder}/node_modules/nuxt/bin/nuxt.mjs",
      "args": [
        "dev"
      ]
    }
  ],
  "compounds": [
    {
      "name": "fullstack: nuxt",
      "configurations": [
        "server: nuxt",
        "client: chrome"
      ]
    }
  ]
}
